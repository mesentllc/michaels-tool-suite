<?xml version="1.0" encoding="UTF-8" ?>
		<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

<appender name="defaultAppender" class="org.apache.log4j.RollingFileAppender">
	<param name="MaxFileSize" value="5MB" />
	<param name="MaxBackupIndex" value="1" />
	<param name="file" value="/mts.log" />
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p [%5t] %c %x: %m%n" />
	</layout>
</appender>

<appender name="rootLogAppender" class="org.apache.log4j.ConsoleAppender">
	<layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p [%5t] %c %x: %m%n" />
	</layout>
</appender>

<root>
	<priority value="INFO" />
	<appender-ref ref="defaultAppender" />
</root>
</log4j:configuration>